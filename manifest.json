{
  "manifest_version": 2,
  "name": "BlackSwanDev - WooCommerce Product ID Extractor",
  "version": "1.0",
  "description": "Easily extract and copy the WooCommerce product ID, variation ID, and REST API endpoint.",
  "permissions": ["activeTab", "tabs", "https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Toggle WooCommerce Product ID Extractor"
  }
}
